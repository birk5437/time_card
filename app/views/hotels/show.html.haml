- model_class = Hotel
.page-header
  %h1
    Hotel Info
  = image_tag @hotel.logo.url(:medium)

  %h3 Lotions at this Hotel
  = render partial: "lotions/list", :locals => {:lotions => @hotel.lotions}

.form-group
  = link_to t('.back', :default => t("helpers.links.back")), |
    hotels_path, :class => 'btn btn-success'                  |
  - if user_signed_in? && (current_user == @hotel.created_by || current_user.superuser?)
    = link_to t('.edit', :default => t("helpers.links.edit")), |
      edit_hotel_path(@hotel), :class => 'btn btn-primary'       |
    -#
    = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
      hotel_path(@hotel),                                                                                            |
      :method => 'delete',                                                                                         |
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
      :class => 'btn btn-danger'                                                                                   |
